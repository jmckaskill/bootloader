LIBC = toolchain/lib/arm/libclang-rt.a

rule ld-script
 command = toolchain/host/bin/ld.lld.exe -g $LIBC --script $in -o $out
 description = LD $out

rule objcopy
 command = toolchain/host/bin/llvm-objcopy.exe $in $out

build bootp-deploy-win32/deploy-data.c: run bin/$HOST/create-cdata.exe bin/linux-arm/bootloader.bin
